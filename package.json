{
  "name": "catgpt",
  "displayName": "CatGPT",
  "description": "鼓励猫，让喵喵教你写代码吧~",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "zhaoo",
  "icon": "media/images/logo.png",
  "keywords": [
    "chatgpt",
    "openai",
    "cat",
    "ai"
  ],
  "license": "MIT",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:catgpt.chatWebview"
  ],
  "contributes": {
    "commands": [
      {
        "command": "catgpt.codeOptimize",
        "title": "CatGPT: 代码优化"
      },
      {
        "command": "catgpt.codeExplain",
        "title": "CatGPT: 代码解释"
      },
      {
        "command": "catgpt.codeScore",
        "title": "CatGPT: 代码评分"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "catgpt.codeOptimize",
          "group": "catgpt-menu-group@1",
          "when": "editorTextFocus"
        },
        {
          "command": "catgpt.codeExplain",
          "group": "catgpt-menu-group@1",
          "when": "editorTextFocus"
        },
        {
          "command": "catgpt.codeScore",
          "group": "catgpt-menu-group@1",
          "when": "editorTextFocus"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "catgpt",
          "title": "catgpt",
          "icon": "media/images/cat.png"
        }
      ]
    },
    "views": {
      "catgpt": [
        {
          "type": "webview",
          "id": "catgpt.chatWebview",
          "name": "catgpt"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.192",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.41.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "lodash": "^4.17.21",
    "nanoid": "^4.0.2"
  }
}